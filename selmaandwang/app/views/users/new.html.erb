<h1>Join the adventure</h1>
<%= link_to "Sign up with Facebook", "/auth/facebook"%>

<p>OR</p>

<%= form_for @user, method: 'POST', url: '/signup' do |u| %>
	<%= u.text_field :first_name, placeholder: :first_name %>
	<%= u.text_field :last_name, placeholder: :last_name %>
	<%= u.text_field :email, placeholder: :email %>
	<%= u.password_field :password, placeholder: :password %>
	<%= u.password_field :password_confirmation, placeholder: 'confirm password' %>
	<%= u.submit %>
<% end %>